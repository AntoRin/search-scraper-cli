{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,    
    "sourceMap": true,   
    "outDir": "./dist",  
    "rootDir": "./src",  
    "strict": true,      
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "skipLibCheck": true,      
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }                                
  }
}
